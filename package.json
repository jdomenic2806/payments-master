    "cors": "2.8.5",
    "dotenv": "16.3.1",
    "express": "4.18.2",
    "express-rate-limit": "7.1.5",
    "helmet": "7.1.0",
    "jsonwebtoken": "9.0.2",
    "pg": "8.11.3",
    "pg-hstore": "2.3.4",
    "pino": "^9.6.0",
    "pino-pretty": "^13.0.0",
    "sequelize": "6.35.2",
    "stripe": "14.10.0",
